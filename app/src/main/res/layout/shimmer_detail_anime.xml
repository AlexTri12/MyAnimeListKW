<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/shimmer_img_poster_container"
                android:layout_width="160dp"
                android:layout_height="200dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardMaxElevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/button_episode"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/shimmer_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/button_episode"
                android:textIsSelectable="false"
                app:layout_constraintStart_toEndOf="@id/shimmer_img_poster_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shimmer_tv_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/button_episode"
                android:textIsSelectable="false"
                app:layout_constraintStart_toStartOf="@id/shimmer_tv_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmer_tv_name" />

            <TextView
                android:id="@+id/shimmer_tv_release"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/button_episode"
                android:textIsSelectable="false"
                app:layout_constraintStart_toStartOf="@id/shimmer_tv_genres"
                app:layout_constraintEnd_toEndOf="@id/shimmer_tv_genres"
                app:layout_constraintTop_toBottomOf="@id/shimmer_tv_genres" />

            <TextView
                android:id="@+id/shimmer_tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/button_episode"
                android:textIsSelectable="false"
                app:layout_constraintStart_toStartOf="@id/shimmer_tv_release"
                app:layout_constraintEnd_toEndOf="@id/shimmer_tv_release"
                app:layout_constraintTop_toBottomOf="@id/shimmer_tv_release" />

            <TextView
                android:id="@+id/shimmer_tv_other_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/button_episode"
                android:textIsSelectable="false"
                app:layout_constraintStart_toStartOf="@id/shimmer_tv_status"
                app:layout_constraintEnd_toEndOf="@id/shimmer_tv_status"
                app:layout_constraintTop_toBottomOf="@id/shimmer_tv_status" />

            <TextView
                android:id="@+id/shimmer_tv_scores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/button_episode"
                android:textIsSelectable="false"
                app:layout_constraintStart_toStartOf="@id/shimmer_tv_other_name"
                app:layout_constraintEnd_toEndOf="@id/shimmer_tv_other_name"
                app:layout_constraintTop_toBottomOf="@id/shimmer_tv_other_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode"
            android:text="@string/plot_summary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/button_episode"
            android:background="@color/button_episode" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>