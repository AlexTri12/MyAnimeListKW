<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardView.Dark"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/shimmer_img_poster_container"
            android:layout_width="120dp"
            android:layout_height="160dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/placeholder"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/shimmer_tv_rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shimmer_img_poster_container"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shimmer_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/placeholder"
            app:layout_constraintStart_toStartOf="@id/shimmer_tv_rank"
            app:layout_constraintEnd_toEndOf="@id/shimmer_tv_rank"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tv_rank" />

        <TextView
            android:id="@+id/shimmer_tv_scores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/placeholder"
            app:layout_constraintStart_toStartOf="@id/shimmer_tv_name"
            app:layout_constraintEnd_toEndOf="@id/shimmer_tv_name"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tv_name" />

        <TextView
            android:id="@+id/shimmer_tv_release_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"

            android:layout_marginEnd="16dp"
            android:background="@color/placeholder"
            app:layout_constraintStart_toStartOf="@id/shimmer_tv_scores"
            app:layout_constraintEnd_toEndOf="@id/shimmer_tv_scores"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tv_scores" />

        <TextView
            android:id="@+id/shimmer_tv_episodes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/placeholder"
            app:layout_constraintStart_toStartOf="@id/shimmer_tv_release_time"
            app:layout_constraintEnd_toEndOf="@id/shimmer_tv_release_time"
            app:layout_constraintTop_toBottomOf="@id/shimmer_tv_release_time" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>